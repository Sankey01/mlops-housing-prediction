# Configuracion para contenedor Docker 
APP_NAME=Boston-Housing-API-KS 
APP_VERSION=1.0.0 
APP_DESCRIPTION=API REST para prediccion de precios de viviendas usando machine learning 
 
# Configuracion del modelo (rutas DENTRO del contenedor) 
MODEL_PATH=/app/models/best_model.pkl 
MODEL_METADATA_PATH=/app/models/model_metadata.json 
 
# Configuracion del servidor 
HOST=0.0.0.0 
PORT=8000 
WORKERS=1 
LOG_LEVEL=info 
RELOAD=false 
 
# Configuracion de logging 
LOG_FILE=/app/logs/api.log 
ENABLE_ACCESS_LOG=true 
 
# Configuracion de seguridad 
ALLOWED_HOSTS=* 
CORS_ORIGINS=* 
 
# Limites de la API 
MAX_BATCH_SIZE=100 
 
# Configuracion de monitoreo 
HEALTH_CHECK_INTERVAL=30 
 
# Ambiente Docker 
ENVIRONMENT=docker 
DEBUG=false 
METADATA_PATH=/app/models/model_metadata.json 
